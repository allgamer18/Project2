<!-- This section defines the POST request by sending the data to "localhost3000" -->

<script>
$(document).ready(function(){
$("button").click(function(){
$.post("localhost3000",
{
	firstname,
	lastname,
	email,
	company,
	phone
	},
	function(data, status){
	alert("Data: " + data + "\nStatus: " + status);
	});
	});
	});
</script>
	
