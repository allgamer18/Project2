<!-- This scripts links to the AJAX/Jquery library to be able to use the commands -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<body>

<h1>COSC365 Networking</h1>
<h2>Project 2</h2>
<p>Rest API</p>

<form>

<!-- This section is the text boxes that receive user input for sending to the database -->


First name:<br>
<input type = "text"
 id = "firstName"><br>

Last name:<br>
<input type = "text"
 id = "lastName"><br>

Email:<br>
<input type = "text"
 id = "email"><br>

Company:<br>
<input type = "text"
 id = "company"><br>

Phone number:<br>
<input type = "text"
 id = "phone"><br>

 <!-- This section defines the variables to be sent to the server -->
 
<script>
var firstName = document.getElementById(firstName);
var lastName = document.getElementById(lastName);
var email = document.getElementById(email);
var company = document.getElementById(company);
var phone = document.getElementById(phone);
</script>

<!-- This section defines the POST request by sending the data to "localhost3000" -->

<script>
$(document).ready(function(){
$("button").click(function(){
$.post("http://localhost:3000/contact/",
{
	firstname,
	lastname,
	email,
	company,
	phone
	},
	function(data, status){
	alert("Data: " + data + "\nStatus: " + status);
	});
	});
	});
	</script>
	
	
<br><br>	
<button>Send Data</button>

</form>

<!-- This section utilizes the GET feature to receive a contact from the database with all of their information -->

<form>

<!-- Script for the GET feature -->

<script>
	$("button").click(function(){
    $.get("http://localhost:3000/contact/", function(){
        alert(firstName + " " + lastName + " " + email " " + company + " " + phone);
    });
});
</script>
<br><br>

<h3>Use the button below to get a contacts information</h3>

<br><br>
<button>Get Contact</button>

</form>

<h3>Thank you for using my server and client!</h3>

